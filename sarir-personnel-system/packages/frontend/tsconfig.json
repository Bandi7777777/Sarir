{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "allowJs": true,
    "skipLibCheck": true,
    "noEmit": true,
    "incremental": true,
    "module": "esnext",
    "esModuleInterop": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },

    "typeRoots": ["./node_modules/@types", "./src/types"],
    "plugins": [{ "name": "next" }],
    "forceConsistentCasingInFileNames": true,
    "types": ["@types/react", "@types/node", "jspdf-autotable"]
  },
  "include": ["next-env.d.ts", "src/**/*", "src/**/*.ts", "src/**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
